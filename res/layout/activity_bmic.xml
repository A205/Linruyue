<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BMICActivity"
    android:background="@drawable/cat">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BMI体重指数计算器"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_marginTop="44dp"
        android:textColor="#FF000000"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身高"
        android:textSize="25dp"
        android:id="@+id/text2"
        android:textColor="#FF000000"
        android:layout_above="@+id/text3"
        android:layout_alignRight="@+id/text3"
        android:layout_alignEnd="@+id/text3"
        android:layout_marginBottom="39dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入身高/cm"
        android:textSize="25dp"
        android:inputType="number"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/edit"
        android:id="@+id/hight"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignRight="@+id/weight"
        android:layout_alignEnd="@+id/weight"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="体重"
        android:textSize="25dp"
        android:textColor="#FF000000"
        android:id="@+id/text3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit"
        android:hint="请输入体重/kg"
        android:inputType="number"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/weight"
        android:layout_alignBottom="@+id/text3"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="20dp"
        android:inputType="number"
        android:id="@+id/button"
        android:background="@drawable/btn"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/weight"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="结果在这里"
        android:textSize="20dp"
        android:id="@+id/show"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
